{
  "extends": "./base.build.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "types": [
      "./wrangler-types.d.ts",
      "@cloudflare/vitest-pool-workers/types"
    ]
  },
  "include": [
    "${configDir}/wrangler-types.d.ts",
    "${configDir}/env.d.ts",
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.tsx"
  ],
  "exclude": ["${configDir}/node_modules/", "${configDir}/dist/", "${configDir}/eslint.config.js"]
}
