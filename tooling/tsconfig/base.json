{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./base.build.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "paths": {
      "@ucdjs/cli": ["./packages/cli/src/cli.ts"],
      "@ucdjs/env": ["./packages/env/src/index.ts"],
      "@ucdjs/fetch": ["./packages/fetch/src/index.ts"],
      "@ucdjs/schema-gen": ["./packages/schema-gen/src/index.ts"],

      "@ucdjs/schemas": ["./packages/schemas/src/index.ts"],
      "@ucdjs/ucd-store": ["./packages/ucd-store/src/index.ts"],

      // utility packages
      "@ucdjs/shared": ["./packages/shared/src/index.ts"],
      "@ucdjs/utils": ["./packages/utils/src/index.ts"],
      "@ucdjs/path-utils": ["./packages/path-utils/src/index.ts"],

      // fs bridge
      "@ucdjs/fs-bridge": ["./packages/fs-bridge/src/index.ts"],
      "@ucdjs/fs-bridge/bridges/http": ["./packages/fs-bridge/src/bridges/http.ts"],
      "@ucdjs/fs-bridge/bridges/node": ["./packages/fs-bridge/src/bridges/node.ts"],

      // Test utils
      "@ucdjs/test-utils": ["./packages/test-utils/src/index.ts"],

      // We use internal aliases to avoid issues with cyclic dependencies in packages
      "#internal/test-utils/store": ["./packages/test-utils/src/mock-store/index.ts"],
      "#internal/test-utils/msw": ["./packages/test-utils/src/msw.ts"],
      "#internal/test-utils": ["./packages/test-utils/src/index.ts"]
    }
  }
}
