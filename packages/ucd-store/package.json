{
  "name": "@ucdjs/ucd-store",
  "version": "1.0.1-beta.5",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.30.0",
  "license": "MIT",
  "homepage": "https://github.com/ucdjs/ucd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucdjs/ucd.git",
    "directory": "packages/ucd-store"
  },
  "bugs": {
    "url": "https://github.com/ucdjs/ucd/issues"
  },
  "imports": {
    "#internal-pkg:test-utils/*": "./test/helpers/*.ts"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.18"
  },
  "scripts": {
    "build": "tsdown --tsconfig=./tsconfig.build.json",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf dist node_modules",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "playground:http": "tsx --tsconfig=./tsconfig.json ./playgrounds/http-playground.ts",
    "playground:node": "tsx --tsconfig=./tsconfig.json ./playgrounds/node-playground.ts",
    "playground:memory": "tsx --tsconfig=./tsconfig.json ./playgrounds/memory-playground.ts"
  },
  "dependencies": {
    "@luxass/utils": "catalog:runtime",
    "@ucdjs-internal/shared": "workspace:*",
    "@ucdjs/client": "workspace:*",
    "@ucdjs/env": "workspace:*",
    "@ucdjs/fs-bridge": "workspace:*",
    "@ucdjs/lockfile": "workspace:*",
    "@ucdjs/path-utils": "workspace:*",
    "@ucdjs/schemas": "workspace:*",
    "@unicode-utils/core": "catalog:runtime",
    "defu": "catalog:runtime",
    "zod": "catalog:runtime"
  },
  "devDependencies": {
    "@luxass/eslint-config": "catalog:lint",
    "@ucdjs-tooling/tsconfig": "workspace:*",
    "@ucdjs-tooling/tsdown-config": "workspace:*",
    "eslint": "catalog:lint",
    "publint": "catalog:build",
    "tsdown": "catalog:build",
    "tsx": "catalog:build",
    "typescript": "catalog:build",
    "vitest-testdirs": "catalog:test"
  },
  "publishConfig": {
    "access": "public"
  }
}
