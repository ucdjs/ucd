{
  "name": "@ucdjs-internal/shared-ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.28.0",
  "license": "MIT",
  "homepage": "https://github.com/ucdjs/ucd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucdjs/ucd.git",
    "directory": "packages/shared-ui"
  },
  "bugs": {
    "url": "https://github.com/ucdjs/ucd/issues"
  },
  "sideEffects": [
    "./src/styles/globals.css"
  ],
  "imports": {
    "#components/*": "./src/components/*.tsx",
    "#ui/*": "./src/ui/*.tsx",
    "#lib/*": "./src/lib/*.ts",
    "#hooks/*": "./src/hooks/*.ts"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./components": "./dist/components/index.mjs",
    "./hooks/use-mobile": "./dist/hooks/use-mobile.mjs",
    "./lib/utils": "./dist/lib/utils.mjs",
    "./styles/globals.css": "./src/styles/globals.css",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "src/styles"
  ],
  "engines": {
    "node": ">=22.18"
  },
  "scripts": {
    "build": "tsdown --tsconfig=./tsconfig.build.json",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf dist node_modules",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.build.json"
  },
  "dependencies": {
    "@base-ui/react": "catalog:web",
    "@fontsource-variable/inter": "catalog:web",
    "class-variance-authority": "catalog:web",
    "clsx": "catalog:web",
    "lucide-react": "catalog:web",
    "react": "catalog:web",
    "react-dom": "catalog:web",
    "shadcn": "catalog:web",
    "tailwind-merge": "catalog:web",
    "tw-animate-css": "catalog:web",
    "zod": "catalog:prod"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "catalog:linting",
    "@luxass/eslint-config": "catalog:linting",
    "@types/react": "catalog:types",
    "@types/react-dom": "catalog:types",
    "@ucdjs-tooling/tsconfig": "workspace:*",
    "@ucdjs-tooling/tsdown-config": "workspace:*",
    "eslint": "catalog:linting",
    "eslint-plugin-format": "catalog:linting",
    "eslint-plugin-react-hooks": "catalog:linting",
    "eslint-plugin-react-refresh": "catalog:linting",
    "publint": "catalog:dev",
    "tailwindcss": "catalog:web",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "publishConfig": {
    "access": "public"
  }
}
