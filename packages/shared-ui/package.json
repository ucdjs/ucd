    "./ui/button": "./dist/ui/button.mjs",
    "./ui/card": "./dist/ui/card.mjs",
    "./ui/collapsible": "./dist/ui/collapsible.mjs",
    "./ui/combobox": "./dist/ui/combobox.mjs",
    "./ui/command": "./dist/ui/command.mjs",
