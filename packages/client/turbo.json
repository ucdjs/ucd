{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": [
        "generate:client"
      ]
    },
    "dev": {
      "persistent": false
    },
    "typecheck": {
      "outputs": [".cache/tsbuildinfo.json"],
      "dependsOn": [
        "generate:client"
      ]
    },
    "generate:client": {
      "outputs": [
        "src/.generated/api.d.ts"
      ],
      "dependsOn": [
        "@ucdjs/api#build:openapi"
      ]
    }
  }
}
