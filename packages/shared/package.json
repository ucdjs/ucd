{
  "name": "@ucdjs/shared",
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.17.1",
  "license": "MIT",
  "homepage": "https://github.com/ucdjs/ucd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucdjs/ucd.git",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/ucdjs/ucd/issues"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.18"
  },
  "scripts": {
    "build": "tsdown --tsconfig=./tsconfig.build.json",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf dist node_modules",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@luxass/unicode-utils-new": "catalog:prod",
    "@luxass/utils": "catalog:prod",
    "@ucdjs/env": "workspace:*",
    "debug": "catalog:prod",
    "defu": "catalog:prod",
    "picomatch": "catalog:prod",
    "zod": "catalog:prod"
  },
  "devDependencies": {
    "@luxass/eslint-config": "catalog:linting",
    "@types/debug": "catalog:types",
    "@types/picomatch": "catalog:types",
    "@ucdjs-tooling/tsconfig": "workspace:*",
    "@ucdjs-tooling/tsdown-config": "workspace:*",
    "eslint": "catalog:linting",
    "publint": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest-testdirs": "catalog:testing"
  },
  "publishConfig": {
    "access": "public"
  }
