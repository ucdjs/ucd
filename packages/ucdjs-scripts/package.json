{
  "name": "@ucdjs/ucdjs-scripts",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.28.1",
  "license": "MIT",
  "homepage": "https://github.com/ucdjs/ucd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucdjs/ucd.git",
    "directory": "packages/ucdjs-scripts"
  },
  "bugs": {
    "url": "https://github.com/ucdjs/ucd/issues"
  },
  "imports": {
    "#lib/*": "./src/lib/*.ts"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "bin": {
    "ucdjs-scripts": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.18"
  },
  "scripts": {
    "build": "tsdown --tsconfig=./tsconfig.build.json",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf dist node_modules",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.build.json"
  },
  "dependencies": {
    "@ucdjs-internal/shared": "workspace:*",
    "@ucdjs/client": "workspace:*",
    "@ucdjs/schemas": "workspace:*",
    "@unicode-utils/core": "catalog:prod",
    "apache-autoindex-parse": "catalog:prod",
    "cac": "catalog:prod",
    "nanotar": "catalog:dev",
    "wrangler": "catalog:workers"
  },
  "devDependencies": {
    "@luxass/eslint-config": "catalog:linting",
    "@types/node": "catalog:types",
    "@ucdjs-tooling/tsconfig": "workspace:*",
    "@ucdjs-tooling/tsdown-config": "workspace:*",
    "eslint": "catalog:linting",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev"
  }
}
