{
  "name": "@ucdjs/monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.18"
  },
  "packageManager": "pnpm@10.28.0",
  "workspaces": [
    "packages/*",
    "apps/*",
    "vscode"
  ],
  "scripts": {
    "build": "turbo run build --filter \"./packages/*\" --concurrency=15",
    "build:apps": "turbo run build --filter \"./apps/*\"",
    "build:app": "turbo run build --filter \"./apps/${APP_NAME}\"",
    "build:vscode": "turbo run build --filter ./vscode",
    "clean": "turbo run clean && git clean -xdf node_modules",
    "dev": "turbo watch dev --filter \"./packages/*\"",
    "dev:apps": "turbo run dev --filter \"./apps/*\"",
    "dev:vscode": "turbo run dev --filter ./vscode",
    "lint": "turbo run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "turbo run typecheck",
    "typecheck:apps": "turbo run typecheck --filter \"./apps/*\"",
    "typecheck:app": "turbo run typecheck --filter \"./apps/${APP_NAME}\"",
    "release": "node ./scripts/release.ts prepare",
    "release:verify": "node ./scripts/release.ts verify",
    "release:publish": "node ./scripts/release.ts publish"
  },
  "devDependencies": {
    "@types/node": "catalog:types",
    "@ucdjs/release-scripts": "catalog:monorepo",
    "@ucdjs/ucdjs-scripts": "workspace:*",
    "@vitest/coverage-istanbul": "catalog:testing",
    "@vitest/ui": "catalog:testing",
    "eslint": "catalog:linting",
    "turbo": "catalog:monorepo",
    "typescript": "catalog:dev",
    "vitest": "catalog:testing"
  }
}
