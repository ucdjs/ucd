{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Unicode Arabic Shaping",
  "scopeName": "source.ucd.arabic",
  "patterns": [
    {
      "include": "source.ucd.core"
    },
    {
      "comment": "Full row match for ArabicShaping: Hex; Name; Join_Type; Join_Group",
      "match": "^([0-9A-Fa-f]{4,6});\\s*([^;]+);\\s*([^;]+);\\s*([^;\\n\\r]+)",
      "captures": {
        "1": {
          "name": "constant.numeric.hex.ucd"
        },
        "2": {
          "name": "string.unquoted.label.ucd"
        },
        "3": {
          "name": "variable.parameter.joining-type.ucd"
        },
        "4": {
          "name": "support.type.joining-group.ucd"
        }
      }
    }
  ]
}
